from sense_hat import SenseHat
sense = SenseHat()

red = (255, 0 , 0)

black = (0, 0, 0)

while True:
    temp = sense.get_temperature()
    paine = sense.get_pressure()
    
    temp = round(temp, 2)
    msg = "temp = %s" % (temp)
    print("paine ")
    print(paine)
    print("lampotila")
    print(temp)
    sense.show_message(msg, text_colour=red, back_colour = black, scroll_speed = 0.05)
